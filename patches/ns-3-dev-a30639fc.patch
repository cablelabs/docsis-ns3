+  uint32_t        m_tcpSndBufSize; //!< TCP send buffer size (if non-zero)
+  uint32_t        m_tcpRcvBufSize; //!< TCP receive buffer size (if non-zero)
+  TracedValue<bool>  m_connected; //!< True if connected
