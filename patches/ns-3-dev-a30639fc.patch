+  Ptr<Packet> packet = Create<Packet> (static_cast<uint32_t> (size));
+  m_txTrace (packet);
+  m_socket->Send (packet);
+  if (InetSocketAddress::IsMatchingType (m_server))
+    {
+      NS_LOG_INFO ("At time " << Simulator::Now ().GetSeconds ()
+                              << "s; sent " <<  packet->GetSize () << " bytes to "
