+  Ptr<RandomVariableStream>  m_readingTime;  //!< rng for reading time
+  bool            m_useRestartInterval; //!< Whether to restart transfer periodically
+  Ptr<RandomVariableStream>  m_restartInterval;  //!< rng for restartInterval
